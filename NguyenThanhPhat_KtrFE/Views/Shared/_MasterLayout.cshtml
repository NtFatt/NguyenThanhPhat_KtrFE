    .cart-header {
        font-weight: bold;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .cart-item-details {
        margin-bottom: 20px;
    }

    .product {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #ddd;
    }

        .product img {
            width: 100px;
            margin-right: 20px;
        }

    .product-details {
        width: 40%;
    }

        .product-details p {
            margin-top: 20px;
        }

    .price, .total-price {
        width: 15%;
        text-align: center;
        font-weight: bold;
    }

    .quantity {
        display: flex;
        align-items: center;
    }

        .quantity button {
            width: 30px;
            height: 30px;
            border: 1px solid #ccc;
            background-color: #f8f9fa;
            cursor: pointer;
            font-size: 16px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0;
        }

            .quantity button:hover {
                background-color: #e0e0e0;
            }

        .quantity input {
            width: 30px;
            text-align: center;
            border: 1px solid #ccc;
            height: 30px;
            margin: 0 5px;
            font-size: 16px;
            border-radius: 2px;
            text-align: center;
        }

    .discount {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .discount input {
            width: 70%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    .checkout-btn {
        background-color: red; /* Màu nền đỏ */
        color: white; /* Màu chữ trắng */
        border: none; /* Bỏ viền */
        padding: 10px 15px; /* Thêm khoảng đệm */
        border-radius: 4px; /* Bo góc */
        cursor: pointer; /* Hiển thị con trỏ chuột khi di chuột qua */
    }

        .checkout-btn:hover {
            background-color: darkred; /* Màu nền khi di chuột qua */
        }
    .add-discount-btn {
        background-color: #007bff; /* Màu nền xanh */
        color: white; /* Màu chữ trắng */
        border: none; /* Bỏ viền */
        padding: 10px 15px; /* Thêm khoảng đệm */
        border-radius: 4px; /* Bo góc */
        cursor: pointer; /* Hiển thị con trỏ chuột khi di chuột qua */
        margin-left: 10px; /* Khoảng cách với nút "Áp dụng" */
    }

        .add-discount-btn:hover {
            background-color: #0056b3; /* Màu nền khi di chuột qua */
        }

