<!DOCTYPE html>

<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Giỏ Hàng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>

    <div id="container">
        <header>
            <div class="logo">
                <img src="https://media.licdn.com/dms/image/D5605AQGU83DhUuWKhg/feedshare-thumbnail_720_1280/0/1692156346163?e=2147483647&v=beta&t=FZnEOxEFbRK1aG94UmGOW9uQeMTPEAZtwtVUP-13Yro" alt="logo" />
            </div>
            <div class="search-box">

                <div class="search">

                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Giao nhanh 2H & dùng khung giờ" id="searchInput">
                    <button onclick="searchFunction()"><i class="fas fa-search"></i></button>
                </div>
                <nav>
                    <ul>
                        <li><a href="~/Home/TrangChu"><i class="fas fa-home"></i>Trang chủ</a></li>
                        <li><a href="#"><i class="fas fa-star"></i>Astra</a></li>
                        <li><a href="#"><i class="fas fa-user"></i>Tài khoản</a></li>
                        <li class="cart-icon">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="cart-badge">2</span>
                        </li>
                    </ul>
                </nav>

            </div>
            <div class="address-bar">
                Giao đến: <a href="#">Q.Bình Tân, P.Bình Hưng Hòa, Hồ Chí Minh</a>
            </div>

            <div>
                @RenderBody()
            </div>
        </header>
        <main class="cart-container">
            <section class="cart-items">
                <h2>Giỏ Hàng</h2>

                <div class="progress-bar">
                    <div class="progress" style="width: 50%;"></div>
                    <div class="freeship">Freeship 30K</div>
                </div>
                <div class="cart-item">
                    <div class="cart-header">
                        <input type="checkbox" onclick="toggleSelectAll(this)"> Tất cả (2 sản phẩm)
                    </div>
                    <div class="cart-item-details">
                        <h3>GIA DỤNG VIỆT</h3>
                        <div class="product">
                            <input type="checkbox" onclick="updateSelectAllCheckbox(); updateCartSummary();" />
                            <img src="https://cdn11.dienmaycholon.vn/filewebdmclnew/DMCL21/Picture//Apro/Apro_product_32312/samsung-galaxy-_main_706_1020.png.webp" alt="Product Image" />
                            <div class="product-details">
                                <h4>Điện thoại Samsung Galaxy A54 5G (8GB/128GB)</h4>
                                <p>Hàng chính hãng - Tím</p>
                            </div>
                            <div class="price">8.480.000đ</div>
                            <div class="quantity">
                                <button class="btn-decrease" onclick="changeQuantity(-1)">-</button>
                                <input id="quantity-input" value="1" min="1" class="quantity-input" readonly>
                                <button class="btn-increase" onclick="changeQuantity(1)">+</button>
                            </div>
                            <div class="total-price">8.480.000đ</div>
                        </div>
                    </div>
                    <div class="cart-item-details">
                        <h3>Shop Khuyến Mãi</h3>
                        <div class="product">
                            <input type="checkbox" onclick="updateSelectAllCheckbox(); updateCartSummary();" />
                            <img src="https://cdn.mediamart.vn/images/product/samsung-galaxy-a54-5g-a546e-8128g-green-xanh---dm_714e9826.jpg" alt="Product Image" />
                            <div class="product-details">
                                <h4>Điện thoại Samsung Galaxy A54 5G (8GB/256GB)</h4>
                                <p>Hàng chính hãng - Xanh</p>
                            </div>
                            <div class="price">8.990.000đ</div>
                            <div class="quantity">
                                <button class="btn-decrease" onclick="changeQuantity2(-1)">-</button>
                                <input id="quantity-input" value="1" min="1" class="quantity-input" readonly>
                                <button class="btn-increase" onclick="changeQuantity2(1)">+</button>
                            </div>
                            <div class="total-price">8.990.000đ</div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Phần tổng quan đơn hàng -->
            <aside class="cart-summary">
                <h3>Tiki Khuyến Mãi</h3>
                <div class="discount">
                    <select id="discount-code" aria-label="Chọn mã giảm giá">
                        <option value="">Chọn mã giảm giá</option>
                        <option value="Giam50K">Giảm 50K</option>
                        <option value="Giam50">Giảm 50%</option>
                    </select>
                    <button onclick="applyDiscount()">Áp dụng</button>
                    <button class="add-discount-btn" onclick="toggleDiscountInput()" aria-label="Chọn hoặc thêm mã giảm giá">Chọn hoặc thêm mã giảm giá</button>
                </div>


                <div class="summary">
                    <div class="row">
                        <span>Tạm tính:</span>
                        <span id="subtotal">0đ</span>
                    </div>
                    <div class="row">
                        <span>Tổng tiền:</span>
                        <span id="total">0đ</span>
                    </div>
                    <p class="freeship-info">FREESHIP đã được áp dụng!</p>

                    <button class="checkout-btn">Mua Hàng (0)</button>
                </div>
            </aside>


        </main>
    </div>
    <script>
        function toggleDiscountInput() {
            // Bạn có thể thêm logic để hiển thị hoặc ẩn các tùy chọn mã giảm giá
            alert("Hiển thị tùy chọn chọn hoặc thêm mã giảm giá!");
        }
    </script>
    <script>
        function applyDiscount() {
            const discountCode = document.getElementById('discount-code').value;
            const validCodes = {
                "Giam50K": 50000, // Giảm 50k
                "Giam50": 0.5 // Giảm 50%
            };
            const subtotalElement = document.querySelector('.summary .row:nth-child(1) span:last-child');
            const totalElement = document.querySelector('.summary .row:nth-child(2) span:last-child');

            let subtotal = parseInt(subtotalElement.textContent.replace(/\./g, '').replace('đ', '').trim());
            let total = subtotal;

            if (discountCode in validCodes) {
                const discountValue = validCodes[discountCode];
                if (discountValue === 50000) {
                    total -= discountValue; // Giảm giá cố định
                    alert("Mã giảm giá 50K đã được áp dụng!");
                } else if (discountValue === 0.5) { //dfsfdsds
                    total *= discountValue; // Giảm 50%
                    alert("Mã giảm giá 50% đã được áp dụng!");
                }
            } else {
                alert("Mã giảm giá không hợp lệ!");
            }

            // Đảm bảo tổng tiền không âm
            total = total < 0 ? 0 : total;

            // Cập nhật tổng tiền
            totalElement.textContent = total.toLocaleString('vi-VN') + 'đ';
        }

    </script>

    <script>
        function changeQuantity(amount) {
            const quantityInput = document.querySelector('#quantity-input');
            let currentQuantity = parseInt(quantityInput.value);
            currentQuantity += amount;

            if (currentQuantity < 1) currentQuantity = 1; // Ngăn số lượng âm
            quantityInput.value = currentQuantity;

            const price = 8480000; // Giá của sản phẩm đầu tiên
            updateTotalPrice(price, currentQuantity, '.total-price', 0);
            updateCheckoutButton(); // Cập nhật số lượng trong nút Mua Hàng
            updateCartSummary(); // Cập nhật tạm tính và tổng tiền
        }
        function updateCartSummary() {
            const prices = [8480000, 8990000]; // Giá của các sản phẩm
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const productCheckboxes = document.querySelectorAll('.product input[type="checkbox"]');
            let subtotal = 0;

            // Tính tạm tính dựa trên số lượng và giá từng sản phẩm
            quantityInputs.forEach((input, index) => {
                if (productCheckboxes[index].checked) {
                    subtotal += parseInt(input.value) * prices[index];
                }
            });

            // Cập nhật tạm tính
            const subtotalElement = document.getElementById('subtotal');
            subtotalElement.textContent = subtotal.toLocaleString('vi-VN') + 'đ';

            // Cập nhật tổng tiền
            const totalElement = document.getElementById('total');
            totalElement.textContent = subtotal.toLocaleString('vi-VN') + 'đ';

            // Cập nhật nút "Mua Hàng"
            updateCheckoutButton();
        }

        // Hàm cập nhật tổng giá tiền của từng sản phẩm
        function updateTotalPrice(price, quantity, totalPriceSelector, index) {
            const totalPrice = price * quantity;
            const totalPriceElements = document.querySelectorAll(totalPriceSelector);
            totalPriceElements[index].textContent = totalPrice.toLocaleString('vi-VN') + 'đ';
        }

        // Hàm cập nhật số lượng trong nút "Mua Hàng"
        // Hàm cập nhật phần tạm tính và tổng tiền
        // Cập nhật số lượng và giá tổng của sản phẩm thứ hai
        function changeQuantity2(amount) {
            const quantityInput = document.querySelectorAll('#quantity-input')[1];
            let currentQuantity = parseInt(quantityInput.value);
            currentQuantity += amount;

            if (currentQuantity < 1) currentQuantity = 1; // Ngăn số lượng âm
            quantityInput.value = currentQuantity;

            const price = 8990000; // Giá của sản phẩm thứ hai
            updateTotalPrice(price, currentQuantity, '.total-price', 1);
            updateCheckoutButton(); // Cập nhật số lượng trong nút Mua Hàng
            updateCartSummary(); // Cập nhật tạm tính và tổng tiền
        }
        function updateCheckoutButton() {
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const productCheckboxes = document.querySelectorAll('.product input[type="checkbox"]');
            let totalQuantity = 0;

            // Tính tổng số lượng chỉ cho sản phẩm đã được chọn
            productCheckboxes.forEach((checkbox, index) => {
                if (checkbox.checked) {
                    totalQuantity += parseInt(quantityInputs[index].value);
                }
            });

            const checkoutButton = document.querySelector('.checkout-btn');
            checkoutButton.textContent = 'Mua Hàng (' + totalQuantity + ')';
        }

        function updateCartSummary() {
            const prices = [8480000, 8990000]; // Giá của các sản phẩm
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const productCheckboxes = document.querySelectorAll('.product input[type="checkbox"]');
            let subtotal = 0;

            // Tính tạm tính chỉ cho sản phẩm đã được chọn
            productCheckboxes.forEach((checkbox, index) => {
                if (checkbox.checked) {
                    const quantity = parseInt(quantityInputs[index].value);
                    subtotal += prices[index] * quantity; // Cộng giá trị cho sản phẩm đã chọn
                }
            });

            // Cập nhật tạm tính và tổng tiền
            const subtotalElement = document.querySelector('.summary .row:nth-child(1) span:last-child');
            const totalElement = document.querySelector('.summary .row:nth-child(2) span:last-child');

            subtotalElement.textContent = subtotal.toLocaleString('vi-VN') + 'đ';
            totalElement.textContent = subtotal.toLocaleString('vi-VN') + 'đ';
            // Cập nhật nút "Mua Hàng"
            updateCheckoutButton();
        }
        // Gọi hàm `updateCheckoutButton` và `updateCartSummary` ngay khi trang được tải để cập nhật nút "Mua Hàng" và tổng tiền ban đầu
        document.addEventListener('DOMContentLoaded', () => {
            updateCheckoutButton();
            updateCartSummary();
        });
    </script>
    <script>
        function updateTotalPrice(price, quantity, totalPriceSelector, index) {
            const totalPrice = price * quantity;
            const totalPriceElements = document.querySelectorAll(totalPriceSelector);
            totalPriceElements[index].textContent = totalPrice.toLocaleString('vi-VN') + 'đ';
        }

        function updateCheckoutButton() {
            const quantityInput1 = document.querySelector('#quantity-input').value;
            const quantityInput2 = document.querySelectorAll('#quantity-input')[1].value;
            const totalQuantity = parseInt(quantityInput1) + parseInt(quantityInput2);

            const checkoutButton = document.querySelector('.checkout-btn');
            checkoutButton.textContent = 'Mua Hàng (' + totalQuantity + ')';
        }
    </script>

    @*CHỌN TẤT CẢ*@
    <script>
        // Hàm khi chọn checkbox Tất cả
        function updateCheckoutButton() {
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const productCheckboxes = document.querySelectorAll('.product input[type="checkbox"]');
            let totalQuantity = 0;

            // Tính tổng số lượng chỉ cho sản phẩm đã được chọn
            productCheckboxes.forEach((checkbox, index) => {
                if (checkbox.checked) {
                    totalQuantity += parseInt(quantityInputs[index].value);
                }
            });

            const checkoutButton = document.querySelector('.checkout-btn');
            checkoutButton.textContent = 'Mua Hàng (' + totalQuantity + ')';
        }

        // Hàm xử lý khi chọn thủ công checkbox của từng sản phẩm
        function updateSelectAllCheckbox() {
            const selectAllCheckbox = document.querySelector('.cart-header input[type="checkbox"]');
            const productCheckboxes = document.querySelectorAll('.product input[type="checkbox"]');
            const allChecked = Array.from(productCheckboxes).every((checkbox) => checkbox.checked);

            // Nếu tất cả các sản phẩm đều được chọn thì checkbox "Tất cả" cũng được chọn
            selectAllCheckbox.checked = allChecked;
            // Cập nhật lại nút "Mua Hàng"
            updateCheckoutButton();
        }
    </script>

</body>
</html>
